import java.io.*;
import javax.xml.parsers.*;
import org.xml.sax.*;
import org.xml.sax.helpers.*;

public class transxchange2GoogleTransit {

	/**
	 * transxchange2GoogleTransit <transxchange xml filename>
	 */
	public static void main(String[] args)
    throws SAXException,IOException, ParserConfigurationException
    {
        // Create a parser factory and use it to create a parser
        SAXParserFactory parserFactory = SAXParserFactory.newInstance();
        SAXParser parser = parserFactory.newSAXParser();
 
        // This is the name of the file you're parsing
        if (args.length != 1) {
        	System.out.println("Usage: transxchange2GoogleTransit <transxchange xml filename>");
        	System.exit(0);
        }
        String filename = args[0];
 
        // Instantiate a DefaultHandler subclass to do parse the input file and output Google Transit data feed
        transxchangeHandler handler = new transxchangeHandler();

        // Start the parser. It reads the file and calls methods of the handler
        parser.parse(new File(filename), handler);

    }

    // This inner class extends DefaultHandler to parse an transxchange xml file
	// and generate corresponding Google Transit data feed files
    public static class transxchangeHandler extends DefaultHandler {
 
    	/**
    	 * Hardcoded xml keys and output field fillers. 
    	 * 	Better practice: configuration file
    	 */
    	
    	// Google Transit file names
    	static final String agencyFilename = "agency.txt";
    	static final String stopFilename = "stops.txt";
       	static final String routesFilename = "routes.txt";
       	static final String tripsFilename = "trips.txt";
       	static final String stop_timesFilename = "stop_times.txt";
       	static final String calendarFilename = "calendar.txt";
       	static final String calendar_datesFilename = "calendar_dates.txt";
       	
       	// Filler control strings
       	static final String drawDefault = "__transxchange2GoogleTransit_drawDefault";
   
       	// transxchange XML keys (in corresponding Google Transit field names)
      	static final String key_agency__agency_name = "OperatorShortName"; // Google Transit required
      	static final String key_agency__agency_url = "EmailAddress"; // Google Transit required
      	static final String key_agency__agency_timezone = drawDefault; // Google Transit required
      	static final String key_stops__stop_id = "AtcoCode"; // Google Transit required
      	static final String key_stops__stop_id2 = "StopPointRef"; // Google Transit required
      	static final String key_stops__stop_name = "CommonName"; // Google Transit required
      	static final String key_stops__stop_desc = drawDefault;
      	static final String key_stops__stop_lat = drawDefault; // Google Transit required
     	static final String key_stops__stop_lon = drawDefault; // Google Transit required
     	static final String key_stops__stop_city = drawDefault;
     	static final String key_stops__stop_region = drawDefault;
     	static final String key_stops__stop_postcode = drawDefault;
     	static final String key_stops__stop_country = drawDefault;
     	static final String key_routes__route_id = "Line id"; // Google Transit required
      	static final String key_routes__route_short_name = "LineName"; // Google Transit required
     	static final String key_routes__route_long_name = "Description"; // Google Transit required
     	static final String key_routes__route_desc = drawDefault;
     	static final String key_routes__route_type = drawDefault; // Google Transit required
      	static final String key_trips__route_id = "JourneyPatternRef"; // Google Transit required
      	static final String key_trips__route_id2 = "VehiceJourneyRef"; // Google Transit required
      	static final String key_trips__service_id = "ServiceRef"; // Google Transit required
      	static final String key_trips__trip_id = "VehicleJourneyCode"; // Google Transit required
      	static final String key_trips__trip_headsign = "DestinationDisplay";
      	static final String key_trips__trip_block_id = drawDefault;
      	static final String key_stop_times__trip_id = drawDefault; // Google Transit required
      	static final String key_stop_times__arrival_time = drawDefault; // Google Transit required
      	static final String key_stop_times__departure_time = drawDefault; // Google Transit required
     	static final String key_stop_times__stop_id = "StopPointRef"; // Google Transit required
    	static final String key_stop_times__stop_sequence = drawDefault; // Google Transit required
      	static final String key_stop_times__type = "NormalStopping"; // Google Transit required
      	static final String key_calendar__service_id = drawDefault; // Google Transit required
      	static final String key_calendar__monday = drawDefault; // Google Transit required
      	static final String key_calendar__tuesday = drawDefault; // Google Transit required
      	static final String key_calendar__wednesday = drawDefault; // Google Transit required
      	static final String key_calendar__thursday = drawDefault; // Google Transit required
      	static final String key_calendar__friday = drawDefault; // Google Transit required
      	static final String key_calendar__saturday = drawDefault; // Google Transit required
      	static final String key_calendar__sunday = drawDefault; // Google Transit required
     	static final String key_calendar__start_date = "StartDate"; // Google Transit required
      	static final String key_calendar__end_date = "EndDate"; // Google Transit required
     	static final String key_calendar_dates__service_id = "ServiceCode"; // Google Transit required
     	static final String key_calendar_dates__date = drawDefault; // Google Transit required
     	static final String key_calendar_dates__exception_type = drawDefault; // Google Transit required
      	      	
      	// hardcoded Google Transit fields fillers
      	static final String default_agency__agency_timezone = "Europe/London"; // Google Transit required
      	static final String default_calendar__end_date_indefinite = "20091231"; // let's create a Y2010 problem
      	static final String default_stops__stop_desc = "";
      	static final String default_stops__stop_street = "";
      	static final String default_stops__stop_city = "";
      	static final String default_stops__stop_region = "";
      	static final String default_stops__stop_postcode = "";
      	static final String default_stops__stop_country = "";
      	static final String default_routes__route_desc = "";
      	static final String default_routes__route_type = "3"; // Google Transit required
      	static final String default_trips__block_id = "0";
      	
      	static final String default_calendar_dates__exception_type = "1"; // Google Transit required
      	
      	
  	
        /**
         * parse from startElement
         */   	
    	
        public void startElement(String uri, String localname, String qname, Attributes attributes) {
            
        }

    }
}	
	
